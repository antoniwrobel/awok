{
  "name": "react-web-boilerplate",
  "version": "0.1.0",
  "description": "React, TypeScript and MUI starter project",
  "private": false,
  "homepage": "./",
  "keywords": [
    "mui",
    "react",
    "starter",
    "typescript"
  ],
  "dependencies": {
    "@emotion/react": "11.9.0",
    "@emotion/styled": "11.8.1",
    "@fontsource/roboto": "4.5.5",
    "@mui/icons-material": "5.6.2",
    "@mui/material": "5.6.4",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@types/react": "17.0.20",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "5.22.0",
    "@typescript-eslint/parser": "5.22.0",
    "env-cmd": "10.1.0",
    "eslint": "8.14.0",
    "eslint-config-airbnb": "19.0.4",
    "postcss-normalize": "10.0.1",
    "stylelint": "14.8.2",
    "stylelint-config-standard": "25.0.0",
    "typescript": "4.4.2"
  },
  "scripts": {
    "build": "env-cmd -f ./env/.env.production react-scripts build",
    "build:dev": "env-cmd -f ./env/.env.development react-scripts build",
    "build:loc": "env-cmd -f ./env/.env.local react-scripts build",
    "build:qa": "env-cmd -f ./env/.env.qa react-scripts build",
    "build:stg": "env-cmd -f ./env/.env.staging react-scripts build",
    "eject": "react-scripts eject",
    "lint": "./node_modules/.bin/eslint --ext .js --ext .jsx --ext .ts --ext .tsx src/",
    "stylelint": "./node_modules/.bin/stylelint \"src/**/*.css\"",
    "start": "env-cmd -f ./env/.env.local react-scripts start",
    "test": "env-cmd -f ./env/.env.test CI=true react-scripts test --env=jsdom --coverage"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
